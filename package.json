{
  "name": "zodvex",
  "version": "0.2.3",
  "description": "Zod <=> Convex integration, supporting Zod 4",
  "keywords": [
    "zod",
    "convex",
    "validators",
    "codec",
    "mapping",
    "schema",
    "validation"
  ],
  "homepage": "https://github.com/panzacoder/zodvex#readme",
  "bugs": {
    "url": "https://github.com/panzacoder/zodvex/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panzacoder/zodvex.git"
  },
  "license": "MIT",
  "author": "Jake Hebert",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "bun run tsup --watch",
    "type-check": "bun run tsc --noEmit",
    "test": "bun test",
    "test:vitest": "bun run vitest",
    "test:types": "bun run vitest --typecheck.only",
    "test:all": "bun test && bun run test:types",
    "test:coverage": "bun run vitest run --coverage",
    "lint": "bun x biome check src __tests__",
    "lint:fix": "bun x biome check --write src __tests__",
    "format": "bun x biome format --write src __tests__",
    "prepublishOnly": "bun run build && bun test && bun run type-check"
  },
  "peerDependencies": {
    "convex": "^1.28.0",
    "convex-helpers": "^0.1.104",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.8.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
